
<link href="~/Areas/Admin/Content/kendoui/styles/kendo.2017.2.621.common-bootstrap.min.css" rel="stylesheet" />
<link href="~/Areas/Admin/Content/kendoui/styles/kendo.2017.2.621.bootstrap.min.css" rel="stylesheet" />
<script src="~/Areas/Admin/Content/kendoui/js/kendo.2017.3.1026.all.min.js"></script>
<script src="~/Areas/Admin/Content/kendoui/js/cultures/kendo.culture.vi-VN.min.js"></script>
<script src="~/Areas/Admin/Content/kendoui/messages/kendo.messages.vi-VN.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        //set current to the "en-GB" culture script
        kendo.culture("vi-VN");
    });
</script>

<div class="card o_form_view mb-3">
    <div class="card-header">Lịch sử biên đề</div>
    <div class="card-body">
        <div id="example">
            <div id="grid"></div>
            <script type="text/javascript">
                $(document).ready(function () {
                    $("#grid").kendoGrid({
                        dataSource: {
                            type: "odata-v4",
                            transport: {
                                read: "/odata/DanhDe"
                            },
                            schema: {
                                model: {
                                    fields: {
                                        Date: { type: "date" },
                                        AmountTotal: { type: "number" },
                                    }
                                }
                            },
                            pageSize: 10,
                            serverPaging: true,
                            serverFiltering: true,
                            serverSorting: true
                        },
                        filterable: true,
                        sortable: true,
                        pageable: true,
                        columns: [
                            {
                                field: "Date",
                                title: "Ngày",
                                format: "{0:d}",
                                width: "100px",
                            },
                            {
                                field: "DaiName",
                                title: "Đài",
                                format: "{0:d}",
                                width: "100px",
                            },
                            {
                                field: "Id",
                                title: "Số đánh",
                                template: "<a style='text-decoration: underline;' data-id='#:Id#' class='show-so-danh'>Xem chi tiết</a>",
                                width: "100px",
                            },
                            {
                                field: "Number",
                                title: "Mã",
                                width: "100px",
                            },
                            {
                                field: "AmountTotal",
                                title: "Tổng tiền",
                                format: "{0:n}",
                                attributes: { "class": "text-right" },
                                width: "100px",
                            },
                            {
                                field: "State",
                                title: "Trạng thái",
                                template: "#:ShowState#",
                                width: "100px",
                            },
                            {
                                field: "KetQua",
                                title: "Kết quả",
                                template: "<span class='o_form_textarea'>#:KetQua || ''#</span>",
                                width: "100px",
                            },
                        ]
                    });
                });
            </script>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="danh-de-line-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Số đánh</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>

</div>

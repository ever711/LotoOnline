@model LoDeOnline.Models.ChangePasswordViewModel

<div class="container-3">
    <div class="row">
        <div class="col-md-12 clearfix">
            <div class="titleuser">ĐỔI MẬT KHẨU</div>
        </div>
        <div class="col-md-12 clearfix">
            <div class="agent-p-form">
                <div class="row">
                    @using (Ajax.BeginForm("ChangePassword", "Manage", null, new AjaxOptions { HttpMethod = "POST", OnSuccess = "successRutTien" }, new { id = "ruttien-form" }))
                    {
                        @Html.AntiForgeryToken()
                        //@Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        @*<div class="col-md-12 clearfix">
                                <div class="single-query">
                                    <label>Họ tên:</label>
                                    @Html.TextBoxFor(model => model.Email, new { @class = "keyword-input", placeholder = "Enter ..." })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                                </div>
                            </div>*@

                        <div class="col-md-12 clearfix">
                            <div class="single-query">
                                <label>Mật khẩu cũ:</label>
                                @Html.TextBoxFor(model => model.OldPassword, new { @class = "keyword-input", placeholder = "Nhập mật khẩu cũ ..." })
                                @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                                @*<input type="text" placeholder="(+01) 34 56 7890" class="keyword-input" value="@Model.Phone">*@
                            </div>
                        </div>

                        <div class="col-md-12 clearfix">
                            <div class="single-query">
                                <label>Mật khẩu mới:</label>
                                @Html.TextBoxFor(model => model.NewPassword, new { @class = "keyword-input", placeholder = "Nhập mật khẩu mới ..." })
                                @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-12 clearfix">
                            <div class="single-query">
                                <label>Nhập lại mật khẩu:</label>
                                @Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "keyword-input", placeholder = "Nhập lại mật khẩu ..." })
                                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-12 clearfix" style="text-align:center">
                            <input type="submit" value="Lưu" class="btn btn-primary" style="font-size: 16px; border-radius:3px" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
            function successRutTien(data) {
                alert(data.message);
                if (data.success) {
                    $("#ruttien-form")[0].reset();
                    $("#from_overview_ruttien_account option").each(function () {
                        if ($(this).val().length) {
                            $(this).remove();
                        }
                    });
                }
            }
</script>


<div kendo-validator="vm.validator">
    <div class="form-group">
        <label>Name</label>
        <input type="text" ng-model="vm.model.Name" name="vm.model.Name" class="form-control" required validationMessage="Nhập tên" />
    </div>
    <div class="form-group">
        <label>Đối tượng</label>
        <select kendo-combo-box
                k-ng-model="vm.model.Model"
                name="vm.model.Model"
                k-data-text-field="'Name'"
                k-data-value-field="'Id'"
                k-filter="'contains'"
                k-auto-bind="false"
                k-min-length="1"
                k-data-source="vm.irModelDataSource"
                required validationMessage="Chọn model"
                style="width: 100%"></select>
        <span class="k-invalid-msg" data-for="vm.model.Model"></span>
    </div>
    <div class="form-group">
        <label>Quyền</label>
        <div>
            <label class="checkbox-inline">
                <input type="checkbox" ng-model="vm.model.PermRead" value="true"> Xem
            </label>
            <label class="checkbox-inline">
                <input type="checkbox" ng-model="vm.model.PermCreate" value="true"> Thêm
            </label>
            <label class="checkbox-inline">
                <input type="checkbox" ng-model="vm.model.PermWrite" value="true"> Sửa
            </label>
            <label class="checkbox-inline">
                <input type="checkbox" ng-model="vm.model.PermUnlink" value="true"> Xóa
            </label>
        </div>
    </div>
</div>
